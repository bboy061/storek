{% extends 'base.html.twig' %}

{% block body %}
    <h1>Leagueround</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ leagueRound.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ leagueRound.name }}</td>
            </tr>
            <tr>
                <th>Startdate</th>
                <td>{% if leagueRound.startDate %}{{ leagueRound.startDate|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Enddate</th>
                <td>{% if leagueRound.endDate %}{{ leagueRound.endDate|date('Y-m-d') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_leagueround_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_leagueround_edit', { 'id': leagueRound.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
