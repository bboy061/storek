{% extends 'base.html.twig' %}

{% block body %}
    <h1>News</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ news.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ news.title }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ news.content|raw }}</td>
            </tr>
            <tr>
                <th>Createddate</th>
                <td>{% if news.createdDate %}{{ news.createdDate|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{% if news.active %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_news_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_news_edit', { 'id': news.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
